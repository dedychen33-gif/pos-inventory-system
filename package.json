{
  "name": "pos-inventory-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Sinar Jaya Abadi",
  "description": "POS Pro - Point of Sale & Inventory System",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android",
    "android:run": "npm run build && npx cap sync android && npx cap run android",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --dir",
    "electron:pack": "npm run build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.sinarjayaabadi.pospro",
    "productName": "POS Pro",
    "forceCodeSigning": false,
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/images/icon.png",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "POS-Pro-${version}.exe"
    }
  },
  "dependencies": {
    "@capacitor-mlkit/barcode-scanning": "^7.4.0",
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/camera": "^7.0.3",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/device": "^7.0.2",
    "@capacitor/filesystem": "^7.1.6",
    "@capacitor/share": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@remix-run/router": "^1.23.1",
    "@supabase/supabase-js": "^2.86.2",
    "axios": "^1.13.2",
    "bwip-js": "^4.8.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.1",
    "firebase": "^12.6.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=18"
  }
}
